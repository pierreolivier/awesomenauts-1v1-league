<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div id="page" align="center">
      <div id="content" align="left">
        <br />
        <div align="center">
          <a href="/"><img src="/images/header.png" /></a>
        </div>
        <div id="player">
          <div class="title">{{name}}</div>
          <a href="/group?id={{id_group}}">{{group}}</a> (seeded {{seed}})
          <div class="steam"><a href="/">< back</a> - <a target="_blank" href="{{steam_profile}}">steam profile ></a></div>
          <div id="stats">
            <div class="title">Stats</div>
            <div id="general">
              <div class="title">General</div>
              <div class="container">
                <div class="line">Game played<div class="value">{{game_played}}</div></div>
                <div class="line">Wins<div class="value">{{wins}}</div></div>
                <div class="line">Losses<div class="value">{{losses}}</div></div>
                <div class="line">Points<div class="value">{{points}}</div></div>
                <div class="line">&nbsp;&nbsp;with wins<div class="value">{{with_wins}}</div></div>
                <div class="line">&nbsp;&nbsp;with losses<div class="value">{{with_losses}}</div></div>
              </div>
            </div>
            <div class="highlights">
              <div class="title">Highlights</div>
              {{#highlightsEnable}}
              <div class="container">
                {{#highlights}}
                <div class="line"><img class="border" src="{{image}}" /><div class="info"><b>{{rounds}}</b> rounds picked<br /><b>{{wins}}</b> wins</div></div>
                {{/highlights}}
              </div>
              {{/highlightsEnable}}
            </div>
            <div class="highlights" style="width: 29%">
              <div class="title">Accomplishments</div>
              {{#enable_accomplishments}}
              <div class="container">
                <div class="line"><img class="border" src="{{winning_spree_image}}" /><div class="info"><b><span style="font-size: 17px">Biggest Wining Spree</span></b><br />{{winning_spree_wins}} consecutive wins</div></div>
                <div class="line"><img class="border" src="{{best_image}}" /><div class="info"><b><span style="font-size: 17px">Best match</span></b><br />{{best_score}}</div></div>
              </div>
              {{/enable_accomplishments}}
            </div>
          </div>
          <div id="matches">
            <div class="title">Matches</div>
            {{#no_matches}}
            <div class="no_match">No match!</div>
            {{/no_matches}}
            {{#matches}}
            <div class="match">
              <div class="container">
                <div class="name"><a href="/player?id={{id_player_1}}">{{result_player_1}}</a> vs <a href="/player?id={{id_player_2}}">{{result_player_2}}</a></div>
                <div class="date">{{date}}</div>
                <div class="rounds">
                  {{#rounds}}
                  <div class="round">
                    <div class="rank">#{{rank}}</div>
                    <div class="nauts">
                      {{nauts}} ({{map}})
                    </div>
                    <div class="score">
                      {{score}}
                    </div>
                  </div>
                  {{/rounds}}
                  <div class="winner">
                    <a href="/player?id={{id_winner}}"><b>{{winner}}</b></a> <span style="color: rgb(122, 211, 238);">won this match !</span>
                  </div>
                </div>
              </div>
            </div><br />
            {{/matches}}
          </div>
        </div>
      </div>
      <div id="bottom" align="center">
        {{ title }} - <a target="_blank" href="http://steamcommunity.com/id/DaveW/">DaveW</a> - <a target="_blank" href="http://steamcommunity.com/id/pierr/">p.o</a> - <a target="_blank" href="https://github.com/pierreolivier/awesomenauts-1v1-league">github</a>
      </div>
    </div>
  </body>
</html>