<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div id="page" align="center">
      <div id="content" align="left">
        <br />
        <div align="center">
          <img src="images/header.png" />
        </div>
        <div id="player">
          <div class="title">{{group}}</div>
          <div class="steam"><a href="/">< back</a></div>
          <div id="groups" align="center">
            <div class="title" align="left">Leaderboard</div>
            <div class="group">
              <div class="name"><a href="/group?id={{id}}"><b>{{name}}</b></a></div>
              <table border="0" class="table" style="width: 800px">
                <tr class="header">
                  <td width="10%">Rank</td>
                  <td>Name</td>
                  <td width="10%">Wins</td>
                  <td width="10%">Losses</td>
                  <td width="10%">Points</td>
                </tr>
                {{#players}}
                <tr class="line">
                  <td class="rank">{{rank}}</td>
                  <td class="name"><a href="/player?id={{id}}">{{player_name}}</a></td>
                  <td>{{wins}}</td>
                  <td>{{losses}}</td>
                  <td>{{points}}</td>
                </tr>
                {{/players}}
              </table>
            </div>
          </div>
          <div id="stats">
            <div class="title">Stats</div>
            <div id="general">
              <div class="title">General</div>
              <div class="container">
                <div class="line">Game played<div class="value">{{game_played}}</div></div>
                <div class="line">Points<div class="value">{{points}}</div></div>
                <div class="line">&nbsp;&nbsp;with wins<div class="value">{{with_wins}}</div></div>
                <div class="line">&nbsp;&nbsp;with losses<div class="value">{{with_losses}}</div></div>
              </div><br />
              <div class="title">Best player</div>
              <div class="container">
                <div class="line"><img class="border" src="{{best_image}}" /><div class="info2"><a href="/player?id={{best_player}}">{{best_name}}</a><br /><b>{{best_score}}</b></div></div>
              </div>
            </div>
            <div class="highlights">
              <div class="title">Highlights</div>
              <div class="container">
                {{#highlights}}
                  <div class="line"><img class="border" src="{{image}}" /><div class="info2"><a href="/player?id={{id}}">{{name}}</a><br /><b>{{wins}}</b> wins<br /><b>{{rounds}}</b> rounds</div></div>
                {{/highlights}}
              </div>
            </div>
            <div class="highlights" style="width: 29%">
              <div class="title">Most used nauts</div>
              <div class="container">
                {{#mostUsedNauts}}
                <div class="line"><img class="border" src="{{image}}" /><div class="info"><b>{{rounds}}</b> rounds<br /></div></div>
                {{/mostUsedNauts}}
              </div>
            </div>
          </div>
          <div id="matches">
            <div class="title">Matches</div>
            {{#no_matches}}
            <div class="no_match">No match!</div>
            {{/no_matches}}
            {{#matches}}
            <div class="container">
              <div class="match">
                <div class="name"><a href="/player?id={{id_player_1}}">{{result_player_1}}</a> vs <a href="/player?id={{id_player_2}}">{{result_player_2}}</a></div>
                <div class="date">{{date}}</div>
                <div class="rounds">
                  {{#rounds}}
                  <div class="round">
                    <div class="rank">#{{rank}}</div>
                    <div class="nauts">
                      {{nauts}} ({{map}})
                    </div>
                    <div class="score">
                      {{score}}
                    </div>
                  </div>
                  {{/rounds}}
                  <div class="winner">
                    <a href="/player?id={{id_winner}}"><b>{{winner}}</b></a> <span style="color: rgb(122, 211, 238);">won this match !</span>
                  </div>
                </div>
              </div>
            </div><br />
            {{/matches}}
          </div>
        </div>
        <div id="bottom" align="center">
          {{ title }} - <a target="_blank" href="http://steamcommunity.com/id/DaveW/">DaveW</a> - <a target="_blank" href="http://steamcommunity.com/id/pierr/">p.o</a> - <a target="_blank" href="https://github.com/pierreolivier/awesomenauts-1v1-league">github</a>
        </div>
      </div>
    </div>
  </body>
</html>